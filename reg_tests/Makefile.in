# @configure_input@

# Top level makefile template

# Target specification
all clean install:
	cd ipxwafs/src && $(MAKE) $@ LDFLAGS="$(OMP_FLAGS) $(LFLAGS)"
	cd gausslat/src && $(MAKE) $@
	cd gcdist/src && $(MAKE) $@
	cd gdswiz_wzd/src && $(MAKE) $@
	cd ipxetas/src && $(MAKE) $@
	cd ipsector/src && $(MAKE) $@
	cd ipmerge2/src && $(MAKE) $@
	cd makgds/src && $(MAKE) $@
	cd ipolates/src && $(MAKE) $@ EXTRA_FCFLAGS=$(OMP_FLAGS)
	cd ipolatev/src && $(MAKE) $@ EXTRA_FCFLAGS=$(OMP_FLAGS)

distclean:
	cd ipxwafs/src && $(MAKE) $@
	cd gausslat/src && $(MAKE) $@
	cd gcdist/src && $(MAKE) $@
	cd gdswiz_wzd/src && $(MAKE) $@
	cd ipxetas/src && $(MAKE) $@
	cd ipsector/src && $(MAKE) $@
	cd ipmerge2/src && $(MAKE) $@
	cd makgds/src && $(MAKE) $@
	cd ipolates/src && $(MAKE) $@
	cd ipolatev/src && $(MAKE) $@
	-rm Makefile config*.log config.status

Makefile: Makefile.in config.status
	./config.status $@

config.status: configure
	./config.status --recheck

.PHONY: all clean distclean check install
